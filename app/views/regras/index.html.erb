<p id="notice"><%= notice %></p>

<h1>Listando Regras</h1>

<table class="table">
  <thead>
    <tr>
      <th>Criterio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regras.each do |regra| %>
      <tr>
        <td><%= regra.criterio %></td>
        <td><%= link_to 'Show', regra %></td>
        <td><%= link_to 'Edit', edit_regra_path(regra) %></td>
        <td><%= link_to 'Destroy', regra, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Regra', new_regra_path %>
